@page
@model EsafyCapcitacion.Pages.Options.IndexModel

@{
    ViewData["Title"] = "Index";
}
<div class="card card-body">
    <div class="card card-header">
        <div class="row">
            <div class="col-11">
                <h4>
                    Opciones de respuesta
                </h4>
            </div>
            <div class="col-1">
                <a asp-page="Create" class="btn btn-sm btn-success float-right">
                    <i class="fa fa-plus-circle"></i>
                </a>
            </div>
        </div>
    </div>
    <hr />
    <table class="table table-hover table-bordered border-primary" id="datata">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.QuestionOption[0].QuestionText)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.QuestionOption[0].IsCorrectAns)
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.QuestionOption)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.QuestionText)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsCorrectAns)
                    </td>
                    <td>
                        <div class="btn-group">
                            <a asp-page="./Edit" class="btn btn-sm btn-warning" asp-route-id="@item.QuestionOptionId"><i class="fa fa-edit"></i></a>
                            <a asp-page="./Details" class="btn btn-sm btn-info" asp-route-id="@item.QuestionOptionId"><i class="fa fa-eye"></i></a>
                            <a asp-page="./Delete" class="btn btn-sm btn-danger" asp-route-id="@item.QuestionOptionId"><i class="fa fa-times"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr class="bg-light">
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        </tfoot>
    </table>
    <hr />
</div>

