                <span asp-validation-for="Examination.CourseTestId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Examination.StudentId" class="control-label"></label>
                @*<input asp-for="Examination.StudentId" class="form-control" />*@
                <select asp-for="Examination.StudentId" class="custom-select form-control" asp-items="@ViewBag.Students" ></select>
                <span asp-validation-for="Examination.StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
