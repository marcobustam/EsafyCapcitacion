    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Examination</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Examination.CourseId" class="control-label"></label>
                @*<input asp-for="Examination.CourseId" class="form-control" />*@
                <select class="custom-select form-control" asp-for="Examination.CourseId" asp-items="@ViewBag.Courses"></select>
                <span asp-validation-for="Examination.CourseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Examination.CourseTestId" class="control-label"></label>
                @*<input asp-for="Examination.CourseTestId" class="form-control" />*@
