@page
@model EsafyCapcitacion.Pages.Exams.IndexModel

@{
    ViewData["Title"] = "Index";
}
<div class="card card-body">
    <div class="card card-header">
        <div class="row">
            <div class="col-11">
                <h4>
                    Exámenes Ingresados
                </h4>
            </div>
            <div class="col-1">
                <a asp-page="Create" class="btn btn-sm btn-success float-right">
                    <i class="fa fa-plus-circle"></i>
                </a>
            </div>
        </div>
    </div>
    <hr />
    <table class="table table-hover table-bordered border-primary" id="datata">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Examination[0].ExaminationId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Examination[0].CourseId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Examination[0].CourseTestId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Examination[0].StudentId)
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Examination)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExaminationId)
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.CourseId)*@
                        @Html.DisplayFor(modelItem => Model.Courses.Where(cu => cu.CourseId == item.CourseId).First().CourseName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.CourseTests.Where(ct => ct.CourseTestId == item.CourseTestId).First().CourseTestName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Students.Where(st => st.PersonId == item.StudentId).First().ShortName)
                    </td>
                    <td>
                        <div class="btn-group">
                            <a asp-page="./Edit" class="btn btn-sm btn-warning" asp-route-id="@item.ExaminationId"><i class="fa fa-edit"></i></a>
                            <a asp-page="./Details" class="btn btn-sm btn-info" asp-route-id="@item.ExaminationId"><i class="fa fa-eye"></i></a>
                            <a asp-page="./Delete" class="btn btn-sm btn-danger" asp-route-id="@item.ExaminationId"><i class="fa fa-times"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr class="bg-light">
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        </tfoot>
    </table>
    <hr />
</div>

